generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model employee {
  employeeid Int @id @default(autoincrement())
  employeeNo String @unique
  password String
  firstname String
  lastname String
  suffix String
  email String @unique
  position String
  shortJobDescription String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  timeShift timeshift[] //it means one-to-many relationship indicating the [] is an array or list of TimeShift
}

model timeshift {
  timeshiftid Int @id @default(autoincrement())
  dateFrom DateTime
  dateTo DateTime
  timeIn DateTime
  breakOut DateTime
  breakIn DateTime
  timeOut DateTime
  monRestDay Boolean
  tueRestDay Boolean
  wedRestDay Boolean
  thursRestDay Boolean
  friRestDay Boolean
  satRestDay Boolean
  sunRestDay Boolean
  applyToAll Boolean
  employeeFieldTimeShift employee @relation(fields: [employeeId], references: [employeeid])
  employeeId Int
}
